    </form> -->
  </div>
</nav>
<div class="container">
<p></p>
<div class="row bg-info view">

  <% @post.errors.full_messages.each do |message| %>
      <div class="form-error">
      <%= message %>
      </div>
  <% end %>
  <div class="col-sm-3 col-2 q">
  </div>
  <div class="col-4">
  
        <div class="name_body">
          名前:
          <%= @post.name %>
          
        </div>
        <div class="date_body">
          期限:
          <%=  @post.date %>
        </div>
        <div class="memo_body">
          注記:
          <%= @post.memo %>
        </div>
        <div class="post-time space">
        <%= l @post.created_at %>
      </div>
      <div class="row">
      <div class="col-6">
        <a class="navbar-brand btn btn-sm bg-light text-dark" href="/posts/<%= @post.id %>/edit">編集</a>
      </div>
      <div class="col-6">
      <div class="navbar-brand"><%= button_to("削除", "/posts/#{@post.id}/destroy", data: { turbo_method: :delete }) %></div>
      </div>
      </div>
    </div>
        <div class="col-5">
        <% if @post.image_name == nil or @post.image_name == "" %>
        <% else %>
          <img class="img_body" src="<%="/post_images/#{@post.image_name}" %>">
        <% end %>
        </div>
        
</div>     
      
      
      

</div>

    

