<% content_for :css do %>
  
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
<% end %>
<header>
      <div class="header-logo">
        <% if @current_user %>
          <% if @current_user.id != 1 %>
            <%= link_to("TMS", "/posts/index") %>
          <% else %>
            TMS
          <% end %>
        <% else %>
          <%= link_to("TMS", "/") %>
        <% end %>
      </div>
      <ul class="header-menus">
        <% if @current_user %>
          <li>
              <%= link_to(@current_user.name,"/users/#{@current_user.id}") %>
          </li>
          <% if @current_user.id == 1 %>
            <li>
              <%= link_to("ユーザー一覧", "/users/index") %>
            </li>
          <% end %>
          <% if @current_user.id != 1 %>
            <li>
            <%= link_to("投稿一覧", "/posts/index") %>
            </li>
            <li>
              <%= link_to("新規投稿","/posts/new") %>
            </li>
          <% end %>
          <li>
            <%= link_to("ログアウト", "/logout") %>
          </li>
        <% else %>
          <li>
            <%= link_to("TMSの使い方", "/about") %>
          </li>
          <li>
            <%= link_to("新規登録", "/users/signup") %>
          </li>
          <li>
            <%= link_to("ログイン", "/login") %>
          </li>
        <% end %>
      </ul>
    </header>
<div class="main posts-show">
  <div class="container">
    <div class="posts-show-item">
      <ul>
        <div class="name_body">
          <li>名前:</li>
          <li><%= @post.name %></li>
          
        </div>
        <div class="date_body">
          <li>期限:</li>
          <li><%=  @post.date %></li>
        </div>
        <div class="memo_body">
          <li>注記:</li>
          <li><%= @post.memo %></li>
        </div>
        <% if @post_images == nil %>
          <li><img class="posts_image" src="<%="/post_images/#{@post.image_name}" %>"></li>
        <% end %>
        </ul>
      <p></p>
      
      
      <div class="post-time">
        <%= l @post.created_at %>
      </div>
      <div class="post-menus">
        <%= link_to("編集", "/posts/#{@post.id}/edit") %>
        <%= button_to("削除", "/posts/#{@post.id}/destroy", data: { turbo_method: :delete }) %>
      </div>
    </div>
  </div>
</div>