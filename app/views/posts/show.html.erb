<div class="main posts-show">
  <div class="container">
    <div class="posts-show-item">
      <p><%= @post.name %></p>

      <p><%= @post.date %></p>
      <p><%= @post.memo %></p>
      <img src="<%="/post_images/#{@post.image_name}" %>">
      <div class="post-time">
        <%= @post.created_at %>
      </div>
    </div>
  </div>
</div>