<% content_for :css do %>
  
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
<% end %>
<header>
      <div class="header-logo">
        <% if @current_user %>
          <% if @current_user.id != 1 %>
            <%= link_to("TMS", "/posts/index") %>
          <% else %>
            TMS
          <% end %>
        <% else %>
          <%= link_to("TMS", "/") %>
        <% end %>
      </div>
      <ul class="header-menus">
        <% if @current_user %>
          <li>
              <%= link_to(@current_user.name,"/users/#{@current_user.id}") %>
          </li>
          <% if @current_user.id == 1 %>
            <li>
              <%= link_to("ユーザー一覧", "/users/index") %>
            </li>
          <% end %>
          <% if @current_user.id != 1 %>
            <li>
            <%= link_to("投稿一覧", "/posts/index") %>
            </li>
            <li>
              <%= link_to("新規投稿","/posts/new") %>
            </li>
          <% end %>
          <li>
            <%= link_to("ログアウト", "/logout") %>
          </li>
        <% else %>
          <li>
            <%= link_to("TMSの使い方", "/about") %>
          </li>
          <li>
            <%= link_to("新規登録", "/users/signup") %>
          </li>
          <li>
            <%= link_to("ログイン", "/login") %>
          </li>
        <% end %>
      </ul>
    </header>
<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">登録する</h1>
    <div class="form">
      <div class="form-body">
        <%= form_tag("/posts/create",{multipart: true}) do %>
            <div>
                <label for="name">名前</label>
                <input name="name">
            </div>
            <div>
                <label for="image_name">写真</label>
                <input name="image" type="file">
            </div>
            <div>
                <label for="date">期限</label>
                <input name="date" type="date" value="Time.now.strftime("%Y-%m-%d")">
            </div>
            <div>
                <label for="memo">注記</label>
                <textarea name="memo"></textarea>
            </div>
            <input type="submit" value="投稿">
        <% end %>
      </div>
    </div>
  </div>
</div>