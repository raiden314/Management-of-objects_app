<div class="card" style="width: 18rem;">
<div class="card-body">
<div class="form users-form">
<div class="form-body">
  <% @user.errors.full_messages.each do |message| %>
      <div class="form-error">
      <%= message %>
      </div>
  <% end %>
  <%= form_tag("/users/#{@user.id}/update") do %>
      <div class="form-signin">
      <span id="reauth-email" class="reauth-email"></span>
      <label for="inputUser">ユーザー名</label>
      <input type="name" name="name" value="<%= @user.name %>" id="inputUser" class="form-control" required autofocus>
      <label for="inputEmail">メールアドレス</label>
      <input type="email" name="email" value="<%= @user.email %>" id="inputEmail" class="form-control" required autofocus>
      <label for="inputPassword">パスワード</label>
      <input name="password" value="<%= @user.password %>" id="inputPassword" class="form-control" required>
      <button class="btn btn-lg btn-primary btn-block btn-signin send" type="submit">保存</button>
    </div>
  <% end %>
</div>
</div>
</div>
</div>
    

