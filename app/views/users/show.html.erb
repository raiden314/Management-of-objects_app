  <body>
  <div class="editor fix-height">
    <div class="dropdown a">  
      <header>
        <nav class="navbar navbar-expand-md  navbar-dark bg-dark fixed-top">
          <a class="navbar-brand btn btn-sm btn-info" href="/about">TMS</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav mr-auto">
            <!-- <a class="navbar-brand btn btn-sm btn-dark" href="/users/<%= @current_user.id %>"><%= @current_user.name %> <span class="sr-only">(current)</span></a> -->
              <a class="nav-link" href="/users/<%= @current_user.id %>"><%= @current_user.name %> <span class="sr-only">(current)</span></a>
              <li class="nav-item active">
                <a class="navbar-brand btn btn-sm btn-info" href="/posts/new">新規登録</a>
              </li>
              
              <li class="nav-item active">
                <a class="navbar-brand btn btn-sm btn-info" href="/posts/index">投稿一覧</a>
              </li>
            </ul>
            <ul class="navbar-nav">
              <li class="nav-item active">
                <a class="navbar-brand btn btn-sm btn-outline-info" href="/logout">ログアウト</a>
              </li>
            </ul>
            <!-- <form class="form-inline mt-2 mt-md-0">
              <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form> -->
          </div>
        </nav>
      </header>

      <div class="card-deck mb-3 text-center">
        <div class="card mb-4 shadow-sm">
          <div class="card-body">
          <% if @error_message %>
        <div class="form-error">
          <%= @error_message %>
        </div>
      <% end %>
          <h2><%= @user.name %></h2>
          <p><%= @user.email %></p>
            <ul class="list-unstyled mt-3 mb-4">
              
              <li class="list">
                <% if @user.id == @current_user.id %>
                  <%= link_to("編集", "/users/#{@user.id}/edit") %>
                <% end %>
              </li>
              <li class="list">
                <% if @current_user.id == @user.id && @current_user.id != 1 %>
                  <%= button_to("削除", "/users/#{@user.id}/destroy", data: { turbo_method: :delete }) %>
                <% end %>
              </li>
              
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>

